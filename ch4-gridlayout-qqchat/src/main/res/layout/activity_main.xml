<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal"

    android:columnCount="6"
    android:rowCount="4"
    android:background="@mipmap/qqbg"

    tools:context=".MainActivity">

    <!-- 使用rowSpan或者columnSpan需要将layoutGravity=fill才能让组件横跨行或者列

        背景图片还不会用啊！！！文字不能占据行数大小怎么跟背景图适配？
    -->
    <TextView
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:text="好久不见，你最近在做什么？"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@mipmap/qipaoright"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_row="0"
        android:layout_column="5"
        android:background="@mipmap/qqtxright"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/qqtxleft"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:background="@mipmap/qipaoleft"
        android:text="没事我溜达"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="50dp"
        android:background="@mipmap/qipaoright"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="拿华子来抽一抽" />
    <TextView
        android:layout_row="2"
        android:layout_column="5"
        android:background="@mipmap/qqtxright"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        />

